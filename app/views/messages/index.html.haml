.chat-side
  =render partial: "layouts/side_bar"
.chat-main
  .chat-main__header
    .chat-main__header--group.clearfix
      .chat-main__header--group-name
        TEST GROUP
      %a.chat-main__header--group-edit-btn{:href => ""}
        edit
    .chat-main__header-members
      MEMBER:
      %i
        sghrm
  .chat-main__body
    =render @messages
  .form
    = form_for [@group, @message] do |f| 
      = f.text_field :content, class: 'form__message' ,placeholder: 'type a message' , id: 'new_message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'picture-o' , class: 'icon'
          = f.file_field  :image, class: 'hidden'
      = f.submit 'Send' , class: 'form__submit'
